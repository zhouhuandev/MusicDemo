<?xml version="1.0" encoding="utf-8"?>

<!--
    动画效果：从右边滑入，从完全不可见到完全可见
-->

<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300"
    android:fillAfter="true">

    <translate
        android:fromXDelta="100%p"
        android:toXDelta="0" />

    <alpha
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />
</set>
